<div class="loginWrapper">
  <div class="login">
    <form action="/admin/login" method="POST">
      <h1 class="display-6">Login page</h1>
      <hr class="divider" />
      <div class="messages"><%- include ('./partials/messages') %></div>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="">Email</span>
        </div>
        <input
          class="form-control"
          type="email"
          name="email"
          value=""
          placeholder="Enter email"
          required
        />
      </div>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="">Password</span>
        </div>
        <input
          class="form-control"
          type="password"
          name="password"
          value=""
          placeholder="Enter password"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary w-100">Log in</button>
    </form>
  </div>
</div>
<style>
  .loginWrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .login {
    position: relative;
    max-width: 80%;
    width: 420px;
    padding: 32px;
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 1px 1px 55px 2px rgba(0, 0, 0, 0.1);
  }

  .divider {
    width: 100%;
    height: 1px;
    background: rgba(0, 0, 0.3);
  }

  .login > form {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .login > form > * {
    margin-bottom: 14px;
  }

  .form-control {
    text-align: center !important;
  }

  .input-group-prepend {
    width: 120px;
  }
</style>
